
@{
    ViewBag.Title = "Index";
}

<h2>Dersler</h2>
<div class="row">
    <div class="col-md-6">
        <div class="panel panel-success">
            <div class="panel-heading">
                <h4 class="panel-title">
                    Yeni Ders Ekle
                </h4>
            </div>
            <div class="panel-body">
                <div class="row">
                    <div class="col-md-12">
                        <div class="form-horizontal">
                            <div class="form-group">
                                <label for="DersAdi" class="control-label col-md-2">Ders Adı</label>
                                <div class="col-md-10">
                                    @Html.TextBox("ders", "", new { @class = "form-control", placeholder = "Ders Adı" })
                                </div>
                            </div>
                            <div class="form-group">
                                <label for="OgrId" class="control-label col-md-2">Örenci Adı</label>
                                <div class="col-md-10">
                                    @Html.DropDownList("Ogrenci",null,"Seçiniz",htmlAttributes: new { @class="form-control"})
                                </div>
                            </div>                           
                        </div>
                    </div>
                </div>
            </div>
            <div class="panel-footer">
                <button id="btnCreateDers" type="button" class="btn btn-success">Create</button>
            </div>
        </div>
    </div>
    <div class="col-md-6">
        <ul id="dersler" class="list-group"></ul>
    </div>
</div>
