
@{
    ViewBag.Title = "Index";
}

<h2>Öğrenciler</h2>
<div class="row">
    <div class="col-md-6">
        <div class="panel panel-success">
            <div class="panel-heading">
                <h4 class="panel-title">
                    Yeni Çalışan Ekle
                </h4>
            </div>
            <div class="panel-body">
                <div class="row">
                    <div class="col-md-12">
                        <div class="form-horizontal">
                            <div class="form-group">
                                <label for="Ad" class="control-label col-md-2">İsim</label>
                                <div class="col-md-10">
                                    @Html.TextBox("ad", "", new { @class = "form-control", placeholder = "İsim" })
                                </div>
                            </div>
                            <div class="form-group">
                                <label for="Soyad" class="control-label col-md-2">Soyisim</label>
                                <div class="col-md-10">
                                    @Html.TextBox("soyad", "", new { @class = "form-control", placeholder = "Soyisim" })
                                </div>
                            </div>
                            <div class="form-group">
                                <label for="OgrNo" class="control-label col-md-2">Öğrenci No</label>
                                <div class="col-md-10">
                                    @Html.TextBox("ogrno", "", new { @class = "form-control", placeholder = "Öğrenci No" })
                                </div>
                            </div>
                            <div class="form-group">
                                <label for="Email" class="control-label col-md-2">Email</label>
                                <div class="col-md-10">
                                    @Html.TextBox("email", "", new { @class = "form-control", placeholder = "Email" })
                                </div>
                            </div>
                            <div class="form-group">
                                <label for="Telefon" class="control-label col-md-2">Telefon</label>
                                <div class="col-md-10">
                                    @Html.TextBox("telefon", "", new { @class = "form-control", placeholder = "Telefon" })
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="panel-footer">
                <button id="btnCreate" type="button" class="btn btn-success">Create</button>
            </div>
        </div>
    </div>
    <div class="col-md-6">
        <ul id="ogrenciler" class="list-group">

        </ul>
    </div>
</div>

